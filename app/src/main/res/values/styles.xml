<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/button_station</item>
    </style>
    <style name="button_station" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btnstation</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="elevation">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="AndonInput" parent="Widget.AppCompat.EditText">

        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>